<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.db.project.customer.CustomerMapper">

    <!--모든 customer 검색하기-->
    <select id="selectCustomer" resultType="hashmap" >
       SELECT * FROM cloudbook.borrow_membership;
    </select>
    <!-- 회원가입 -->
    <insert id="insertCustomer" parameterType="hashmap">
        INSERT INTO
        customer(customer_id, customer_pw, customer_name, customer_nickname, customer_address_num, customer_phone, customer_address, customer_customer_seq)
        VALUES (#{customer_id},#{customer_pw},#{customer_name},#{customer_nickname}, #{customer_address_num}, #{customer_phone}, #{customer_address}, #{customer_customer_seq})
    </insert>

    <!-- 추천인 입력-->
    <select id = "selectCustomerSeq" parameterType="hashmap">
        SELECT customer_seq FROM customer
        WHERE customer_nickname = #{customer_nickname};
    </select>

    <!-- 로그인 -->
    <select id="login" parameterType="hashmap">
        SELECT * FROM customer
        WHERE customer_id = #{customer_id}
        AND customer_password= #{customer_password}
    </select>

    <!--Spring Scheduler -->
    <!-- 등급 변경 -->
    <update id="updateRentalMembership" parameterType="hashmap">
        UPDATE customer set rental_membership_rental_membership_seq = #{rental_membership_seq}
    </update>
    <update id="updateBurrowMembership" parameterType="hashmap">
        UPDATE customer set borrow_membership_borrow_membership_seq = #{borrow_membership_seq}
    </update>
    <!-- 우수 회원 매기기-->
    <insert id="insertBestRental">
        insert best_rental(customer_customer_seq, best_rental_rank)
        values(#{customer_seq}, #{rental_rank})
    </insert>
    <insert id="insertBestBorrow">
        insert best_borrow(customer_customer_seq, best_borrow_rank)
        values(#{customer_seq}, #{borrow_rank})
    </insert>
</mapper>